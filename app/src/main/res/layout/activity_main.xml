<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="iel.tzy.MainActivity"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hook UpdateSelection" />

    <iel.tzy.watcher.TEditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="请输入文本"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <CheckBox
                android:id="@+id/setComposingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="setComposingText" />

            <CheckBox
                android:id="@+id/setComposingRegion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="setComposingRegion" />

            <CheckBox
                android:id="@+id/finishComposingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="finishComposingText" />

            <CheckBox
                android:id="@+id/getTextBeforeCursor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="getTextBeforeCursor" />

            <CheckBox
                android:id="@+id/getTextAfterCursor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="getTextAfterCursor" />

            <CheckBox
                android:id="@+id/getExtractedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="getExtractedText" />

            <CheckBox
                android:id="@+id/getSelectedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="getSelectedText" />

            <CheckBox
                android:id="@+id/setSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="setSelection" />

            <CheckBox
                android:id="@+id/deleteSurroundingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="deleteSurroundingText" />

            <CheckBox
                android:id="@+id/commitText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="commitText" />

            <CheckBox
                android:id="@+id/updateSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="updateSelection" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clear_edit_text"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="清空编辑框" />

        <Button
            android:id="@+id/set_edit_text"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="设置为abcd" />

    </LinearLayout>

</LinearLayout>
